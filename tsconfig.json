{
    "extends": "@vinicius1313/tsconfig/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "libs/types",
        "incremental": true,
        "paths": {
            "@database": ["src/database"],
            "@database/*": ["src/database/*"],
            "@modules/*": ["src/modules/*"],
            "@utils": ["src/utils"],
            "@utils/*": ["src/utils/*"]
        },
        "lib": [
            "ESNext",
            "DOM"
        ],
        "module": "CommonJS"
    },
    "include": [
        "src"
    ]
}