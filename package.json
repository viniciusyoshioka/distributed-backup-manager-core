{
    "name": "distributed-backup-manager-core",
    "description": "Core library for the distributed backup manager",
    "version": "0.0.1",
    "private": true,
    "type": "commonjs",
    "scripts": {
        "postinstall": "npx patch-package",
        "lint": "eslint 'src/**/*.{js,ts,tsx}'",
        "typecheck": "tsc --noEmit",
        "test": "jest",
        "build": "tsc",
        "start": "node --env-file='.env' dist/index.js",
        "sync-server:start:prod": "node --env-file='.env' dist/modules/sync-server/index.js",
        "sync-server:start:dev": "nodemon --env-file='.env' dist/modules/sync-server/index.js"
    },
    "dependencies": {
        "axios": "^1.8.4",
        "class-validator": "^0.14.1",
        "express": "^5.1.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^4.2.0",
        "@types/express": "^5",
        "@types/jest": "^29.5.14",
        "@vinicius1313/eslint-config": "^2.0.1",
        "@vinicius1313/tsconfig": "^1.0.0",
        "eslint": "^9.23.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "ts-jest": "^29.3.0",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.28.0"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "yarn@4.8.0"
}
