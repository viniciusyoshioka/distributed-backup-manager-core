{
    "name": "distributed-backup-manager-core",
    "description": "Core library for the distributed backup manager",
    "version": "0.0.1",
    "private": true,
    "type": "commonjs",
    "scripts": {
        "postinstall": "npx patch-package",
        "lint": "eslint './src/**/*.{js,ts,tsx}'",
        "typecheck": "tsc --noEmit",
        "test": "jest",
        "build": "tsc",
        "typeorm:migration:create": "yarn typeorm migration:create",
        "start": "node --env-file='.env' ./dist/index.js",
        "sync-server:start:dev": "nodemon -r ./src/env/env-loader.ts ./src/modules/sync-server/server.ts",
        "sync-server:start:prod": "node --env-file='.env' ./dist/modules/sync-server/server.js"
    },
    "dependencies": {
        "@nestjs/common": "^11.1.1",
        "@nestjs/swagger": "^11.2.0",
        "arg": "^5.0.2",
        "axios": "^1.8.4",
        "bcryptjs": "^3.0.2",
        "class-validator": "^0.14.1",
        "dedent": "^1.5.3",
        "express": "^5.1.0",
        "form-data": "^4.0.2",
        "multer": "^1.4.5-lts.2",
        "reflect-metadata": "^0.2.2",
        "sqlite3": "^5.1.7",
        "typeorm": "^0.3.22",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^4.2.0",
        "@types/express": "^5",
        "@types/jest": "^29.5.14",
        "@types/multer": "^1",
        "@vinicius1313/eslint-config": "^2.0.1",
        "@vinicius1313/tsconfig": "^1.0.0",
        "dotenv": "^16.5.0",
        "eslint": "^9.23.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "ts-jest": "^29.3.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.28.0"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "yarn@4.8.0"
}
